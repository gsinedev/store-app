<section>
  <div class="container rounded-3 bg-orange shadow">
    <div class="row" style="align-items: stretch">
      <div class="col-lg-4 p-2">
        <div class="bg-light h-100 rounded-3 align-items-center d-flex p-2">
          <img src="<%= items.item_image%>" alt="" width="100%" class="img-thumbnail" />
        </div>
      </div>
      <div class="col-lg-8 p-2">
        <div class="p-4 rounded-3" style="background-color: white">
          <div class="text-secondary">
            <p class="poppin fs-3"><%= items.item_name %></p>
          </div>
          <div class="text-success bg-light p-2 rounded-3 mb-3">
            <span class="poppin fs-3"><i class="fa-solid fa-tag"></i>$<%= items.price %></span>
          </div>
          <div class="text-secondary bg-light p-2 rounded-3 mb-3" style="height: 120px">
            <p><u> Description</u></p>
            <span class="ubuntu"><%= items.item_desc %></span>
          </div>
          <form action="/buy_now" method="GET">
            <div class="text-secondary p-2 rounded-3 row">
              <div class="col">
                <select class="form-select ubuntu" aria-label="Default select example" name="size_option">
                  <option selected>Available Sizes</option>
                  <option value="1">One</option>
                  <option value="2">Two</option>
                  <option value="3">Three</option>
                </select>
              </div>
              <div class="col">
                <select class="form-select ubuntu" aria-label="Default select example" name="color_option">
                  <option selected>Available Colors</option>
                  <option value="1">One</option>
                  <option value="2">Two</option>
                  <option value="3">Three</option>
                </select>
              </div>
            </div>
            <div class="text-secondary bg-light p-2 rounded-3 mb-3 d-flex justify-content-center">
              <button type="button" class="btn shadow-none text-orange border-orange-sm me-3" style="width: 150px">
                <i class="fa-solid fa-cart-shopping"></i>
              </button>

              <input type="hidden" name="item_id" value="<%- items.item_id %>" />
              <button type="submit" class="btn bg-orange shadow-none text-light" style="width: 150px">Buy Now</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="mt-3">
  <div class="container">
    <div class="row mb-3 justify-content-center">
      <div class="bg-orange p-2 rounded-3 comment-section-text" style="width: fit-content">
        <span class="poppin text-light">Comments section</span>
      </div>
    </div>
  </div>

  <div class="container rounded-3 bg-orange shadow">
    <div class="row">
      <div class="col-lg-8 p-3">
        <div class="bg-light p-3 rounded-3 mb-3">
          <form action="/comments/<%= items.item_id %> " method="POST">
            <textarea
              class="form-control shadow-none roboto"
              rows="5"
              placeholder="Say something..."
              name="comment_text"
            ></textarea>
            <div class="d-flex justify-content-end mt-3">
              <button type="reset" class="btn text-dark bg-light shadow-none poppin">Cancel</button>
              <button type="submit" class="btn text-light bg-orange poppin">Submit</button>
            </div>
          </form>
        </div>

        <% comments.forEach((element, index) => { %>

        <div class="row mb-3">
          <div class="col-12">
            <div class="p-3 rounded-3">
              <table>
                <tr>
                  <td>
                    <img src="<%= element.profile_image %> " alt="" class="rounded-circle" width="50px" height="50px" />
                  </td>
                  <td class="ps-3"><span class="poppin text-light"><%= element.username %> </span></td>
                </tr>
                <tr>
                  <td class="text-center d-flex flex-column">
                    <i class="fa-solid fa-angle-up text-light fs-1"></i>

                    <span class="text-light fs-3">0</span>

                    <i class="fa-solid fa-angle-down text-light fs-1"></i>
                  </td>
                  <td class="ps-3 roboto text-light" style="width: 100%"><%= element.comment_text %></td>
                </tr>
              </table>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <div class="col-lg-4 p-3">
        <div class="bg-light p-3 rounded-3 text-center mb-3">
          <span class="poppin fs-4 text-orange"> Products you may like!</span>
        </div>
        <% suggestions.forEach((element, index) => { %>
        <div class="bg-light p-3 rounded-3 mb-3 suggestions-image-container d-flex justify-content-center shadow">
          <div style="width: min-content">
            <div class="mb-3">
              <img
                src="<%= element.item_image %> "
                alt=""
                width="200px"
                onclick="location.href = '/discover/<%= element.id  %>' "
                class="rounded-3"
              />
            </div>
            <div class="bg-orange p-2 rounded-3">
              <span class="text-light roboto"><%= element.item_name %> </span>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</section>
